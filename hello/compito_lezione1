#include <stdio.h>
int main()
{
    char name[32];
    char surname[32];
    
    printf("Enter your name:\n");
    scanf("%s", name);
    printf("Enter your surname:\n");
    scanf("%s", surname);

    printf("\nHello%s", name);
    printf(" %s", surname);
    printf(" have a good day");
    printf("\nBUT REMEMBER GOOD CHRISTMAS\n\n\n");
    
    return 0;
}